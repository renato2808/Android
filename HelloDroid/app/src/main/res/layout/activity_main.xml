<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HelloDroidActivity">
    <ImageView
            android:layout_width="210dp"
            android:layout_height="263dp" app:srcCompat="@drawable/hellodroid"
            android:id="@+id/droidImage"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="92dp"
            android:layout_marginRight="92dp"/>
    <TextView
            android:text="@string/welcome_text"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/clickCounter" android:textColor="#9C27B0"
            android:padding="10dp" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp"
            android:paddingBottom="10dp" tools:ignore="MissingConstraints" android:textSize="@dimen/text_size"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/droidImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="92dp"
            android:layout_marginRight="92dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>